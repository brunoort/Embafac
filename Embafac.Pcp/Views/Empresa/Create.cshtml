<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Empresa</title>
</head>
<body>
    <h2>Empresa</h2>

    <p>
        @Html.ActionLink("Criar novo registro", "Create")
    </p>
    <div>
        @using (Html.BeginForm("Create", "Empresa", FormMethod.Post, new { enctype = "multipart/form-data", style = "width:100%;", id = "signupform" }))
        {
            <div class="step-pane active" id="step1">
                <div class="span4">
                    <div>
                        <h4>Dados </h4>
                    </div>

                    <div class="row span12">
                        <div class="editor-field">
                            Nome : <input id="Nome" name="Nome" type="text"  value="" maxlength="50"/>
                        </div>
                    </div>

                    <div class="row span12">
                        <div class="editor-field">
                            Endereço : <input id="Endereco" name="Endereco" type="text" value="" maxlength="120" />
                        </div>
                    </div>

                    <div class="row span12">
                        
                        <div class="editor-field">
                            <input type="submit" id="btnAddItem" value="Adicionar item" /><br /><br />
                        </div>
                    </div>
                    
                </div>

            </div>
        }
    </div>
</body>
</html>
