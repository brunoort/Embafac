@model IEnumerable<Embafac.Pcp.Entidades.Models.Empresa>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Empresa</h2>

<p>
    @Html.ActionLink("Criar novo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th></th>
</tr>


@foreach (var item in ViewBag.Empresa) { 
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.Nome
        </td>
        <td>
            @item.Endereco
        </td>
       <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
